FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{

    p
    {
        solver          GAMG;
        tolerance       5e-7;
        relTol          0.1;
        smoother        GaussSeidel;
        nPreSweeps      0;
        nPostSweeps     2;
        nFinestSweeps   2;
        cacheAgglomeration off;
        nCellsInCoarsestLevel 100;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }

    pcorr
    {
        $p
        tolerance       1e-8;
        relTol          0.001;
    }


    U
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance        5e-7;
        relTol           0.1;
    }

    Yi 
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       5e-7;
        relTol          0.1;
    }


    eps 
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-6;
        relTol          0;
    }
}


SIMPLE
{
    nNonOrthogonalCorrectors 1;

    nS nSmooth;
    cS cSmooth;

	residualControl
	{
		p               1e-5;
		U               1e-5;
	}
}

STEADYSTATE
{
    VoS iVoS;
    momentumPredictor no;
    nNonOrthogonalCorrectors 0;
    nCorrectors NCORR;

	residualControl
	{
		p               1e-5;
		U               1e-5;
                C               1e-5;
	}
}

relaxationFactors
{
   U 0.3;
   C 0.7;
}

cache
{
    grad(U);
    grad(p);
}


